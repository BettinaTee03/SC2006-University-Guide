{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "ESNext",
    "moduleResolution": "node",            
    "lib": ["esnext", "dom"],                   
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  }
}